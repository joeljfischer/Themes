{{!< default}}

<div class="gh-outer">
<main class="site-main gh-inner">

    {{#author}}
        <section class="term">
            {{#if profile_image}}
                <img class="term-image" src="{{img_url profile_image}}" alt="{{name}}">
            {{/if}}
            <h1 class="term-name">{{name}}</h1>
            {{#if bio}}
                <div class="term-description">{{bio}}</div>
            {{/if}}
        </section>
    {{/author}}

    <div class="post-feed gh-feed">
        {{#foreach posts}}
            {{> "loop"}}
        {{/foreach}}
    </div>

</main>
</div>